<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%= link_to 'New Event', new_event_path %><br>
<%= link_to 'My Events', user_path(cookies[:user_id]) %>

<br>

<br>

<div class="col">
    <h2>Past Events</h2>
    <p>
      <table>
        <thead>
          <tr>
            <th>Location</th>
            <th>Date</th>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @past_events.each do |event| %>
            <tr>
              <td><%= event.location %></td>
              <td><%= event.date %></td>
              <td><%= event.name %></td>
              <td><%= event.description %></td>
              <td><%= link_to 'Show', event %></td>
              <% if same_as_event_creator(event.user_id)%>
                <td><%= link_to 'Destroy', event %></td>
                <td><%= link_to 'Edit', edit_event_path(event) %></td>
                <td><%= link_to 'Invite', new_invitation_path(event.id) %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </p>
</div>

<br>

<div class="col">
  <h2>Upcoming Events</h2>
  <p>
    <table>
      <thead>
        <tr>
          <th>Location</th>
          <th>Date</th>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @upcoming_events.each do |event| %>
          <tr>
            <td><%= event.location %></td>
            <td><%= event.date %></td>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= link_to 'Show', event %></td>
            <% if same_as_event_creator(event.user_id)%>
              <td><%= link_to 'Destroy', event %></td>
              <td><%= link_to 'Edit', edit_event_path(event) %></td>
              <td><%= link_to 'Invite', new_invitation_path(event.id) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </p>
</div>

<br>


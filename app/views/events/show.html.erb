<p id="notice"><%= notice %></p>

<h1>Event</h1>

<p>
  <h3>Creator</h3>
  
  <p>
    <strong>Username:</strong>
    <%= @creator.username %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @creator.email %>
  </p>
</p>

<br>

<p>
  <h3>Event Details</h3>

  <p>
    <strong>Username:</strong>
    <%= @event.location %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @event.date %>
  </p>

  <p>
    <strong>Username:</strong>
    <%= @event.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @event.description %>
  </p>
</p>

<br>

<% if same_as_event_creator(cookies[:user_id]) %>
  <%= link_to 'Invite', invitation_path(@event.id) %> |
  <%= link_to 'Edit', edit_event_path(@event) %>
<% end %>

<br>

<%= link_to 'Back', root_path %>



<h1>User</h1>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'New Event', new_event_path %>

<br />

<br />

<h1>My Events</h1>

<h3>Past Events</h3>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.past_events.each do |event| %>
      <tr>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Destroy', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Invite', "invitations/new/#{event.id}"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Upcoming Events</h3>

<table>
  <thead>

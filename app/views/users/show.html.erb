<%= link_to 'User', new_event_path %>
<br>

<h1>User</h1>

<p>
  <strong>Creator:</strong>
  <%= @creator.username %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @user.email %>
</p>

<div class="col">
<h2>Created events</h2>
<%= list_events(@user_events) %>
</div>

<br>
<h1>Past Events</h1>
<br>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.past_events.each do |event| %>
      <tr>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>upcoming Events</h1>
<br>


<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.upcoming_events.each do |event| %>
      <tr>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>